<div class="row ">
  <div class="col-xs-8 col-md-6">
  <div class="box">

<p id="notice"><%= notice %></p>

<h1 class="right">Lista de Clínicas</h1>

<table  width="203%" border="1" cellpadding="0" cellspacing="0" bordercolor="#2f4f4f">
  <thead>
    <tr>
      <th height="10%" width="10%">Rif</th>
      <th height="10%" width="10%">Nombre</th>
      <th height="10%" width="10%">Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinicas.each do |clinica| %>
      <tr>
        <td height="10%" width="10%"><%= clinica.rif %></td>
        <td height="10%" width="10%"><%= clinica.nombre %></td>
        <td height="10%" width="10%"><%= clinica.direccion %></td>
        <td height="10%" width="10%"><%= link_to 'Ver', clinica %></td>
        <td height="10%" width="10%"><%= link_to 'Modificar', edit_clinica_path(clinica) %></td>
        <td height="10%" width="10%"><%= link_to 'Eliminar', clinica, method: :delete, data: { confirm: '¿Está seguro que quiere eliminar la clínica?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar Nueva Clinica', new_clinica_path %>
</div>
</div>
</div>