<div class="row">
  <div class="col-xs-8 col-md-6">
  <div class="box">
<p id="notice"><%= notice %></p>

<h1 class="right">Lista de Pacientes</h1>

<table  width="203%" border="1" cellpadding="0" cellspacing="0" bordercolor="#2f4f4f">
  <thead>
    <tr>
      <th height="10%" width="10%">Nombres</th>
      <th height="10%" width="10%">Apellidos</th>
      <th height="10%" width="10%">Nombres responsable</th>
      <th height="10%" width="10%">Apellidos responsable</th>
      <th height="10%" width="10%">Telefono responsable</th>
      <th height="10%" width="10%">Direccion</th>
      <th height="10%" width="10%">Telefono</th>
      <th height="10%" width="10%">Edad</th>
      <th height="10%" width="10%">Sexo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td height="10%" width="10%"><%= paciente.nombres %></td>
        <td height="10%" width="10%"><%= paciente.apellidos %></td>
        <td height="10%" width="10%"><%= paciente.nombres_responsable %></td>
        <td height="10%" width="10%"><%= paciente.apellidos_responsable %></td>
        <td height="10%" width="10%"><%= paciente.telefono_responsable %></td>
        <td height="10%" width="10%"><%= paciente.direccion %></td>
        <td height="10%" width="10%"><%= paciente.telefono %></td>
        <td height="10%" width="10%"><%= paciente.edad %></td>
        <td height="10%" width="10%"><%= paciente.sexo %></td>
        <td><%= link_to 'Ver', paciente %></td>
        <%# if can? :update, @article %>
        <td><%= link_to "Modificar", edit_paciente_path(paciente) %></td>
        <%# end %>        
        <td><%= link_to 'Eliminar', paciente, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar al paciente?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Registrar Nuevo Paciente', new_paciente_path %>
</div>
</div>
</div>

