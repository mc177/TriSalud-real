<div class="row ">
  <div class="col-xs-8 tablas">
  <div class="box">

<p id="notice"><%= notice %></p>

<h1 class="titulolista">Lista de Especialidades</h1>

    <table width="203%" border="1" cellpadding="0" cellspacing="0" bordercolor="#2f4f4f">
      <thead>
        <tr>
          <th height="10%" width="10%">Id</th>
          <th height="10%" width="10%">Descripcion</th>
          <th height="10%" width="10%">Estatus</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @especialidads.each do |especialidad| %>
          <tr>
            <td height="10%" width="10%"><%= especialidad.id %></td>
            <td height="10%" width="10%"><%= especialidad.descripcion %></td>
            <td height="10%" width="10%"><%= especialidad.estatus %></td>
            <td><%= link_to 'Ver', especialidad %></td>
            <td><%= link_to 'Modificar', edit_especialidad_path(especialidad) %></td>
            <td><%= link_to 'Eliminar', especialidad, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

<%= link_to 'Registrar Nueva Especialidad', new_especialidad_path %>
</div>
</div>
</div>